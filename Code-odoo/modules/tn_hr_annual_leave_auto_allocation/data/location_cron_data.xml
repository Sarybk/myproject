<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="create_employee_location_cron" model="ir.cron">
        <field name="name">HR leave auto allocation </field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.create_employee_location()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 18:00:00')"/>
        <field name="numbercall">-1</field>
        <field name="doall" eval="True"/>
    </record>   
</odoo>

    

