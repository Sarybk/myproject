<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="pos_payment_view_form_inherit" model="ir.ui.view">
           <field name="name">pos.payment.view.form.inherit</field>
           <field name="model">pos.payment</field>
           <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
           <field name="arch" type="xml">
               <xpath expr="//field[@name='amount']" position="after">
                  <field name="pos_tax"/>
               </xpath>
           </field>
       </record>
       <record id="pos_payment_view_tree_inherit" model="ir.ui.view">
           <field name="name">pos.payment.view.tree.inherit</field>
           <field name="model">pos.payment</field>
           <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree"/>
           <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="replace">
                  <field name="amount" string="Amount Includes Tax"/>
               </xpath>
               <xpath expr="//field[@name='amount']" position="after">
                  <field name="pos_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
               </xpath>
                <xpath expr="//field[@name='pos_tax']" position="after">
                  <field name="amount_untax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
               </xpath>
           </field>
       </record>
    </data>
</odoo>


