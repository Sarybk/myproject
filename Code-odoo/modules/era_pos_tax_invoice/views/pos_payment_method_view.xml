<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="pos_payment_method_view_form_inherit" model="ir.ui.view">
           <field name="name">pos.payment.method.view.form.inherit</field>
           <field name="model">pos.payment.method</field>
           <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
           <field name="arch" type="xml">
               <xpath expr="//field[@name='is_cash_count']" position="after">
                  <field name="is_bank"/>
                  <field name="bank_journal_id" attrs="{'invisible': [('is_bank', '=', False)], 'required': [('is_bank', '=', True)]}"/>

               </xpath>
               <xpath expr="//field[@name='cash_journal_id']" position="after">
                   <field name="analytic_id"/>
               </xpath>
           </field>
       </record>
    </data>
</odoo> 