<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Assign Roll Number Wizard Form View  -->
    <record id="view_achive_certificate_form" model="ir.ui.view">
        <field name="name">achive.certificate.form</field>
        <field name="model">achive.certificate</field>
        <field name="arch" type="xml">
            <form string="Move Classes">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="select_custom"/>
                        <field name="partner_id" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button class="btn btn-sm btn-default fa fa-ban" special="cancel" string="Close"/>
                        <button  name="action_print" string="Certificate" type="object"/>
                    </footer>
           </form>
        </field>
    </record>
    
    <!-- Action Of Form & Tree Views Of Move Classes -->
    <record id="action_achive_certificate_form" model="ir.actions.act_window">
        <field name="name">Achivement Certificate</field>
        <field name="res_model">achive.certificate</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_achive_certificate_form" />
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Configurations->Move Classes -->
    <menuitem id="menu_achive_certificate" name="Achivement Certificate" parent="crm_visitor.crm_visitor_base_menu" action="action_achive_certificate_form" />

</odoo>



