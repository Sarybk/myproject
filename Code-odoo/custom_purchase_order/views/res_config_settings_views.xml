<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_payment_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.payment.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
           <div id="print_vendor_checks_setting_container" position="after">
                 <h2>Advance Payment Products</h2>
                <div class="row mt16 o_settings_container" id="product_advance_payment">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div>
                                    <span class="o_form_label">Product Bill line invoice:</span>
                                </div>
                                <div class="row mt8">
                                    <label for="payment_product_id" class="col-lg-4 o_light_label"/>
                                    <field name="payment_product_id"/>
                                </div>
                               <!--  <div class="row mt8">
                                    <label for="tax_product_id" class="col-lg-4 o_light_label"/>
                                    <field name="tax_product_id"/>
                                </div> -->
                                <div class="row mt8">
                                    <label for="retantion_product_id" class="col-lg-4 o_light_label"/>
                                    <field name="retantion_product_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
           </div>
        </field>
    </record>

    <record id="res_config_settings_custom_purchase_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.custom_purchase.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <div name="matrix_setting_container" position="after">
                <h2>Rule Confirm Purchase</h2>
                <div class="row mt16 o_settings_container" id="product_advance_payment">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div>
                                    <span class="o_form_label">Approve purchase total amount</span>
                                </div>
                                <div class="row mt8">
                                    <label for="ceo_amount" class="col-lg-4 o_light_label"/>
                                    <field name="ceo_amount"/>
                                </div>
                                <div class="row mt8">
                                    <label for="supply_amount" class="col-lg-4 o_light_label"/>
                                    <field name="supply_amount"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>  
        </field>
    </record>
</odoo>



