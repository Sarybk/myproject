<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- VIEWS Payment Inherit-->

        <record id="custom_view_account_move_form" model="ir.ui.view">
            <field name="name">account.move.form.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <field name="invoice_payments_widget" position="after">
                     <field name="adv_payment"/>
                </field>
                <field name="tax_totals_json" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>

               <!--  <field name="adv_payment" position="before">
                    <field name=" amount_untaxed"/>
                </field>
 -->
                 <field name="adv_payment" position="after">
                     <field name="discount_po"/>
                </field>

                 <field name="discount_po" position="after">
                     <field name="retention" readonly="1"/>
                </field>
                <field name="retention" position="after">
                     <field name="net_invoice" style="font-size:12pt;" readonly="1" widget="monetary" options="{'currency_field': 'company_currency_id'}" />
                </field>

                <field name="ref" position="after">
<!--                      <field name="ac_payment_id" invisible="0"/>
 -->               
                         <field name="ac_purchase_id"  attrs="{'readonly':[('state', '!=', 'draft')], 'invisible':[('is_payment', '=', False)]}"/>
                         <field name="purchase_amount" attrs="{'invisible':[('is_payment', '=', False)]}"/>
                         <field name="purchase_untax_amount" readonly="True" force_save="True" invisible="1"/>
<!--                          <field name="tax_id"/>
 -->                     <field name="advance_pay" invisible="1"/>
                         
                </field> 
                <div name="journal_div" position="after">
                    <field name="payment_select" attrs="{'invisible':[('is_payment', '=', False)], 'required':[('is_payment', '=', True)],  'readonly':[('state', '!=', 'draft')]}"/>
                    <field name="percentage" attrs="{'invisible':[('is_payment', '=', False)], 'required':[('is_payment', '=', True)], 'readonly':[('state', '!=', 'draft')]}"/>
                    <field name="fixed_amount" attrs="{'invisible':[('payment_select', '!=','amount')], 'required':[('payment_select', '=','amount')]}"/>
                    <field name="is_payment" attrs="{'invisible':[('move_type', '=', 'out_invoice')], 'readonly':[('state', '!=', 'draft')]}"/>

                     

                    <field name="is_invoiced" invisible="1"/>
                </div>
                <!-- Button Create Bill and Invoice Line -->
                <xpath expr="//form/sheet/group" position="after">
                     <group class="oe_right">
                        <button name="create_invoice_line"  string="Create Invoice Line" type="object" 
                            attrs="{'invisible':[('is_payment', '=', False)]}"/>
                    </group>
                </xpath>

                <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree" position="attributes">
                    <attribute name="create">false</attribute>
                     <attribute name="delete">false</attribute>
                </xpath>

                <!--  <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                 <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath> -->

<!--                 
 -->
                <field name="invoice_outstanding_credits_debits_widget" position="replace">
                    <field name="invoice_outstanding_credits_debits_widget"
                            class="oe_invoice_outstanding_credits_debits"
                            colspan="2" nolabel="1" widget="payment"
                            invisible="1"/>
                </field>

            </field>
        </record>
    </data>
</odoo>


