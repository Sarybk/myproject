<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- VIEWS Payment Inherit-->

        <record id="custom_view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.form.custom</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="payment_method_line_id" position="after">
                    <field name="payment_select"/>
                </field>
                <field name="payment_select" position="before">
                    <field name="purchase_id"/>
                </field>

                 <field name="payment_select" position="after">
                    <field name="percentage" attrs="{'invisible':[('payment_select', '!=','percent')], 'required':[('payment_select', '=','percent')]}"/>
                </field>
                <field name="payment_select" position="after">
                    <field name="fixed_amount" attrs="{'invisible':[('payment_select', '!=','amount')], 'required':[('payment_select', '=','amount')]}"/>
                </field>

                <field name="is_internal_transfer" position="after">
                    <field name="is_first_paied" readonly="1"/>
                     <field name="count" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>